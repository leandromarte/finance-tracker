<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Ticker</th>
      <th>Price</th>
      <% if (@user.id == current_user.id) %>      
      <th>Actions</th>
      <% end %>
    <tr>
  </thead>
  <tbody>
    <% @stocks.each do |stock| %>
    <tr>
      <td><%= stock.name %></td>
      <td><%= stock.ticker %></td>
      <td><%= stock.price %></td>
      <% if (@user.id == current_user.id) %>
      <td>
      <%=   link_to 'Delete', user_stock_path(stock), method: :delete, class: 'btn btn-xs btn-danger', data: {confirm: 'Sure?'} %>
      </td>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>